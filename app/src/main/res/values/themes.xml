<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyAccountant" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_pastel_green</item>
        <item name="colorSecondaryVariant">@color/university_red</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:elevation">0dp</item>
        <!-- Customize your theme here. -->

        <item name="popupMenuBackground">@drawable/menu_background</item>
        <item name="popupMenuStyle">@style/popupStyle</item>
    </style>

    <style name="Theme.MyAccountant.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bottom_navigation_view_background</item>
    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">10%</item>
    </style>

    <style name="TabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/fontbold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/fontbold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="popupStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="popupMenuBackground">@drawable/menu_background</item>
    </style>
</resources>

