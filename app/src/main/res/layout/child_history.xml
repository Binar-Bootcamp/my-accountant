<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_child_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/fontsemibold"
                android:textColor="@color/raisin_black"
                android:textSize="16sp"
                tools:text="Date" />

            <TextView
                android:background="@drawable/textview_rounded"
                android:id="@+id/tv_child_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fontbold"
                android:layout_below="@id/tv_child_date"
                android:textColor="@color/anti_flash_white"
                android:textSize="10sp"
                tools:ignore="SmallSp"
                tools:text="+Rp. 50.000.000" />

            <TextView
                android:id="@+id/tv_child_total"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_child_date"
                android:text="total"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="10sp"
                tools:ignore="SmallSp"
                android:fontFamily="@font/fontbold"
                android:layout_alignParentEnd="true" />



        </RelativeLayout>




    </androidx.cardview.widget.CardView>




</LinearLayout>